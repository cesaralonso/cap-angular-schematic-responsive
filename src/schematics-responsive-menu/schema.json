{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsResponsiveMenu",
  "title": "CAP Schematics Responsive Menu",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "App Title",
      "x-prompt": "What is the project title for the App?",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "logo": {
      "type": "string",
      "description": "App logo",
      "x-prompt": "What is the logo url for the header menu?",
      "$default": {
        "$source": "argv",
        "index": 1
      }
    },
    "removeAppComponentHtml": {
      "type": "boolean",
      "description": "Remove content from app.component.html",
      "x-prompt": "Do you want to remove the content for app.component.html?",
      "$default": {
        "$source": "argv",
        "index": 2
      }
    },
    "auth": {
      "type": "boolean",
      "description": "Add menu options for Login and Register",
      "x-prompt": "Do you want integrate with the cap-authentication module?",
      "$default": {
        "$source": "argv",
        "index": 3
      }
    },
    "installAuth": {
      "type": "boolean",
      "description": "Install cap-authentication Schematic",
      "x-prompt": "Do you want to add cap-authentication Schematic?",
      "$default": {
        "$source": "argv",
        "index": 4
      }
    }
  },
  "required": ["title", "logo", "removeAppComponentHtml", "auth", "installAuth"]
}