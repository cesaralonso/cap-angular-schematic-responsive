{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsResponsiveMenu",
  "title": "CAP Schematics Responsive Menu",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "App Name",
      "x-prompt": "What is the project title for the App?",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "logo": {
      "type": "string",
      "description": "App logo",
      "x-prompt": "What is the logo url for the header menu?",
      "default": "https://angular.io/assets/images/logos/angular/logo-nav@2x.png",
      "$default": {
        "$source": "argv",
        "index": 1
      }
    },
    "removeAppComponentHtml": {
      "type": "boolean",
      "description": "Remove content from app.component.html",
      "x-prompt": "Do you want to remove the content for app.component.html?",
      "default": false,
      "$default": {
        "$source": "argv",
        "index": 2
      }
    },
    "auth": {
      "type": "boolean",
      "description": "Add routes for Login and Register",
      "x-prompt": "Do you want integrate with the cap-authorization module?",
      "default": false,
      "$default": {
        "$source": "argv",
        "index": 3
      }
    }
  },
  "required": ["project", "logo"]
}